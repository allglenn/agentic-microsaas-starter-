# SendGrid Email Configuration
# Add these variables to your .env files

# Backend API Environment Variables
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourapp.com
SENDGRID_FROM_NAME=Your App Name

# Frontend Environment Variables (add to apps/web/.env.local)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Email Template Configuration
EMAIL_TEMPLATE_DIR=templates
DEFAULT_EMAIL_FROM=noreply@yourapp.com
DEFAULT_EMAIL_FROM_NAME=Agentic MicroSaaS

# Email Types and Preferences
EMAIL_TYPES=welcome,password_reset,subscription_confirmation,payment_failed,weekly_digest,product_updates,marketing,security
