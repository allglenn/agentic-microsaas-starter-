# Google Cloud Storage Configuration
# Copy this file to .env and fill in your values

# GCP Project Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET_NAME=your-bucket-name

# Service Account Key (for local development)
# Download from GCP Console: IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# For production (Cloud Run), these will be set automatically
# The service account will be attached to the Cloud Run service

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,text/*,application/zip
CHUNK_SIZE_MB=1

# Security Configuration
ENABLE_FILE_ENCRYPTION=false
ENABLE_VIRUS_SCANNING=false

# CORS Configuration (for web uploads)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
